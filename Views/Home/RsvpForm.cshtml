@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="/css/styles.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="RsvpForm" method="post">
                <div class="form-group">
                    <label asp-for="Name">You name:</label>
                    <input class="form-control" asp-for="Name"/>
                </div>
                <div class="form-group">
                    <label asp-for="Email">You email:</label>
                    <input class="form-control" asp-for="Email"/>
                </div>
                <div class="form-group">
                    <label asp-for="Phone">You phone:</label>
                    <input class="form-control" asp-for="Phone"/>
                </div>
                <div class="form-group">
                    <label>Will you attend?</label>
                    <select class="form-control" asp-for="WillAttend">
                        <option value="">Chose the option</option>
                        <option value="true">Yes, I`ll be there</option>
                        <option value="false">No, i can`t come</option>
                    </select>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit RSVP
                    </button>
                </div>
            </form>
        </div>
    </div>

